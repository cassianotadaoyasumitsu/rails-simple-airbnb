<div class="row">
  <div class="col-12">
    <h1>All our Flats</h1>
  </div>
</div>

<div class="row">
  <div class="col">
    <p>All <%= Flat.count %> flats.</p>
  </div>
</div>

<div class="row">
  <% @flats.each do |flat| %>
  <div class="col-3 border m-1" style="background-color: white">
    <div class="flat-card">
      <div class="flat-card-image mt-1" style="background-size: cover; background-image: url('https://i.picsum.photos/id/1054/3079/1733.jpg?hmac=Rk5_Xt3oLlDLJHH3ZDyHCqua0s45mhNjXmID277ZOMI'); height: 180px;"></div>
      <div class="flat-card-content">
        <div class="flat-card-title">
          <h4><%= flat.description %></h4>
        </div>
        <p><%= flat.address %></p>
        <hr>
        <div class="d-flex">
          <div class="flex mr-2">
            <i class="fas fa-users"></i>
            <span><%= flat.number_of_guests %></span>
          </div>
          <div class="flex">
            <i class="fas fa-euro-sign"></i>
            <span><%= flat.price_per_night %></span>
          </div>
        </div>
      </div>
      <hr>
      <div class="flat-card-actions mb-4">
        <%= link_to 'More info' %>
        <%= link_to 'Edit' %>
        <%= link_to 'Remove' %>
      </div>
    </div>
  </div>
  <% end %>
</div>





